{% extends "::base.html.twig" %}

{% block body %}
    <div class="col-md-10">
        <div id="billetEntier">
            <a href="javascript:window.scrollTo(0,document.body.scrollHeight)" class="pull-right btn btn-default" type="button" title="Bas de page">
                <span class="glyphicon glyphicon-arrow-down"></span>
            </a>
            <h2 id="titre"><u>{{ billet.title }}</u></h2>
            <p id="billetContent">{{ billet.content | purify }}</p>
            <div class="comments" id="comments">
                <div class="previousComments">
                    <h3 id="commentaires">Commentaires :</h3>
                    {% include('BlogBundle:Comments:comment.html.twig') %}
                </div>
            </div>
        </div>
        <a href="javascript:window.scrollTo(0,0)" class="pull-right btn btn-default" type="button" title="Haut de page">
            <span class="glyphicon glyphicon-arrow-up"></span>
        </a>
    </div>
{% endblock %}

{% block aside %}
    {{ render(controller('BlogBundle:Blog:aside')) }}
{% endblock %}
