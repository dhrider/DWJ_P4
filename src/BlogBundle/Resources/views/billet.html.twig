{% extends "::base.html.twig" %}

{% block body %}
    <div class="col-md-10" id="billetEntier">
        <h2>{{ billet.title }}</h2>
        <p style="text-align: justify">{{ billet.content | nl2br }}</p>
        <div id="commentaires">
            <h3>Commentaires :</h3>
            <div id="commentsContent">
                {% for comment in comments %}
                    <h5>{{ comment.author }} a publié(e) le {{ comment.date | date('d-m-Y') }} à {{ comment.date | date('H:i:s')}}</h5>
                    <p>{{ comment.content }}</p>
                {% endfor %}
                <div class="well container-fluid col-md-5">
                    {{ render(controller('BlogBundle:Blog:addComment')) }}
                </div>
            </div>
        </div>
    </div>
    {{ render(controller('BlogBundle:Blog:aside')) }}
{% endblock %}